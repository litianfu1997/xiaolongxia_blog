---
// Theme toggle component with client-side script
---

<button
	id="theme-toggle"
	aria-label="切换暗色模式"
	class="theme-toggle"
>
	<svg class="sun-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
		<circle cx="12" cy="12" r="5"/>
		<path d="M12 1v2M12 21v2M4.22 4.22l1.42 1.42M18.36 18.36l1.42 1.42M1 12h2M21 12h2M4.22 19.78l1.42-1.42M18.36 5.64l1.42-1.42"/>
	</svg>
	<svg class="moon-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
		<path d="M21 12.79A9 9 0 1 1 11.21 3 7 7 0 0 0 21 12.79z"/>
	</svg>
</button>

<script define:vars={{}}>
	const toggle = document.getElementById('theme-toggle');
	const isDark = localStorage.theme === 'dark' || (!('theme' in localStorage) && window.matchMedia('(prefers-color-scheme: dark)').matches);

	document.body.classList.toggle('dark', isDark);
	toggle.setAttribute('aria-pressed', String(isDark));

	toggle.addEventListener('click', () => {
		const currentState = toggle.getAttribute('aria-pressed') === 'true';
		const newState = !currentState;
		document.body.classList.toggle('dark', newState);
		toggle.setAttribute('aria-pressed', String(newState));
		localStorage.theme = newState ? 'dark' : 'light';
	});
</script>

<style>
	.theme-toggle {
		position: relative;
		display: flex;
		align-items: center;
		justify-content: center;
		width: 44px;
		height: 44px;
		padding: 0;
		border: none;
		border-radius: 12px;
		background: rgba(5, 150, 105, 0.1);
		cursor: pointer;
		transition: all 0.3s ease;
	}

	.theme-toggle:hover {
		background: rgba(5, 150, 105, 0.2);
		transform: rotate(15deg) scale(1.05);
	}

	.theme-toggle svg {
		position: absolute;
		width: 22px;
		height: 22px;
		color: rgb(var(--gray-dark));
		transition: all 0.3s ease;
	}

	.sun-icon {
		opacity: 1;
		transform: rotate(0deg) scale(1);
	}

	.moon-icon {
		opacity: 0;
		transform: rotate(-180deg) scale(0);
	}

	.theme-toggle[aria-pressed='true'] .sun-icon {
		opacity: 0;
		transform: rotate(180deg) scale(0);
	}

	.theme-toggle[aria-pressed='true'] .moon-icon {
		opacity: 1;
		transform: rotate(0deg) scale(1);
	}

	:global(body.dark) {
		background: linear-gradient(135deg, #0f172a 0%, #1e293b 100%);
		color: #e2e8f0;
	}

	:global(body.dark) main {
		background: rgba(30, 41, 59, 0.5);
		border-radius: 20px;
	}

	:global(body.dark h1),
	:global(body.dark h2),
	:global(body.dark h3) {
		color: #f1f5f9;
	}

	:global(body.dark code) {
		background: rgba(148, 163, 184, 0.2);
		color: #6ee7b7;
	}

	:global(body.dark pre) {
		background: linear-gradient(135deg, #0f172a 0%, #1e293b 100%);
	}

	:global(body.dark .card) {
		background: rgba(30, 41, 59, 0.8);
		border-color: rgba(5, 150, 105, 0.2);
	}

	:global(body.dark .post-card) {
		background: rgba(30, 41, 59, 0.8);
		border-color: rgba(5, 150, 105, 0.2);
	}

	:global(body.dark footer) {
		background: linear-gradient(135deg, #1e293b 0%, #334155 100%);
	}

	:global(body.dark .prose) {
		background: rgba(30, 41, 59, 0.6);
	}

	:global(body.dark .internal-links a) {
		color: #e2e8f0;
	}

	:global(body.dark .logo-text) {
		color: #10b981;
	}
</style>

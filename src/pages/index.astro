<style>
	.hero {
		text-align: center;
		padding: 4em 0;
		animation: fadeIn 0.8s ease-out;
	}

	.hero-content h1 {
		font-size: 3.5rem;
		margin-bottom: 1rem;
		background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
		-webkit-background-clip: text;
		-webkit-text-fill-color: transparent;
		background-clip: text;
	}

	.hero-subtitle {
		font-size: 1.35rem;
		color: rgb(var(--gray));
		margin-bottom: 2.5rem;
		line-height: 1.6;
	}

	.hero-actions {
		display: flex;
		gap: 1rem;
		justify-content: center;
		flex-wrap: wrap;
	}

	.btn {
		display: inline-flex;
		align-items: center;
		gap: 0.5em;
		padding: 0.875em 2em;
		font-size: 1.05em;
		font-weight: 600;
		border-radius: 12px;
		text-decoration: none;
		transition: all 0.3s ease;
		box-shadow: var(--shadow-md);
	}

	.btn-primary {
		background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
		color: white;
		border: none;
	}

	.btn-primary:hover {
		transform: translateY(-3px);
		box-shadow: 0 10px 20px rgba(102, 126, 234, 0.3);
	}

	.btn-secondary {
		background: white;
		color: var(--accent-dark);
		border: 2px solid rgba(99, 102, 241, 0.2);
	}

	.btn-secondary:hover {
		background: rgba(99, 102, 241, 0.05);
		border-color: var(--accent);
		transform: translateY(-3px);
		box-shadow: var(--shadow-lg);
	}

	.features {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
		gap: 2rem;
		margin: 4rem 0;
	}

	.feature-card {
		background: white;
		padding: 2em;
		border-radius: 16px;
		text-align: center;
		box-shadow: var(--shadow-md);
		border: 1px solid rgba(99, 102, 241, 0.1);
		transition: all 0.3s ease;
		animation: slideUp 0.6s ease-out backwards;
	}

	.feature-card:nth-child(1) {
		animation-delay: 0.1s;
	}

	.feature-card:nth-child(2) {
		animation-delay: 0.2s;
	}

	.feature-card:nth-child(3) {
		animation-delay: 0.3s;
	}

	.feature-card:hover {
		transform: translateY(-8px);
		box-shadow: var(--shadow-xl);
		border-color: rgba(99, 102, 241, 0.2);
	}

	.feature-icon {
		font-size: 3rem;
		margin-bottom: 1rem;
		line-height: 1;
	}

	.feature-card h3 {
		margin: 1rem 0;
		color: var(--accent-dark);
		font-size: 1.35rem;
	}

	.feature-card p {
		color: rgb(var(--gray));
		line-height: 1.6;
		margin: 0;
	}

	.latest-posts {
		text-align: center;
		padding: 3em 0;
		border-top: 2px solid rgba(99, 102, 241, 0.1);
		margin-top: 3em;
	}

	.latest-posts h2 {
		font-size: 2.5rem;
		margin-bottom: 1rem;
	}

	.latest-posts p {
		font-size: 1.15rem;
		color: rgb(var(--gray));
	}

	.latest-posts a {
		color: var(--accent);
		font-weight: 600;
	}

	@keyframes slideUp {
		from {
			opacity: 0;
			transform: translateY(30px);
		}
		to {
			opacity: 1;
			transform: translateY(0);
		}
	}

	@keyframes fadeIn {
		from {
			opacity: 0;
		}
		to {
			opacity: 1;
		}
	}

	@media (max-width: 720px) {
		.hero-content h1 {
			font-size: 2.25rem;
		}

		.hero-subtitle {
			font-size: 1.1rem;
		}

		.hero-actions {
			flex-direction: column;
		}

		.btn {
			width: 100%;
			justify-content: center;
		}

		.features {
			grid-template-columns: 1fr;
			gap: 1.5rem;
		}

		.latest-posts h2 {
			font-size: 1.75rem;
		}
	}
</style>

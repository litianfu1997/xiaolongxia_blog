<style>
	/* èƒŒæ™¯åŠ¨ç”» */
	.background-animation {
		position: fixed;
		top: 0;
		left: 0;
		width: 100vw;
		height: 100vh;
		z-index: -1;
		overflow: hidden;
		pointer-events: none;
	}

	.blob {
		position: absolute;
		border-radius: 50%;
		filter: blur(80px);
		opacity: 0.6;
		animation: float 20s infinite ease-in-out;
	}

	.blob-1 {
		top: -10%;
		left: -10%;
		width: 50vw;
		height: 50vw;
		background: rgba(5, 150, 105, 0.2);
		animation-delay: 0s;
	}

	.blob-2 {
		bottom: -10%;
		right: -10%;
		width: 60vw;
		height: 60vw;
		background: rgba(13, 148, 136, 0.15);
		animation-delay: -5s;
	}

	.blob-3 {
		top: 40%;
		left: 40%;
		width: 40vw;
		height: 40vw;
		background: rgba(52, 211, 153, 0.1);
		animation-delay: -10s;
	}

	@keyframes float {
		0%, 100% { transform: translate(0, 0) rotate(0deg); }
		33% { transform: translate(30px, -50px) rotate(10deg); }
		66% { transform: translate(-20px, 20px) rotate(-5deg); }
	}

	.hero {
		text-align: center;
		padding: 4em 0 2em;
		perspective: 1000px;
	}

	.hero-content {
		position: relative;
		padding: 4em 2em;
		border-radius: 32px;
		background: rgba(255, 255, 255, 0.4);
		backdrop-filter: blur(20px);
		border: 1px solid rgba(255, 255, 255, 0.8);
		box-shadow: 
			0 4px 6px -1px rgba(0, 0, 0, 0.05),
			0 20px 40px -5px rgba(5, 150, 105, 0.1);
		animation: heroEnter 1s cubic-bezier(0.2, 0.8, 0.2, 1);
	}

	@keyframes heroEnter {
		from { opacity: 0; transform: translateY(40px) scale(0.95); }
		to { opacity: 1; transform: translateY(0) scale(1); }
	}

	.hero-badge {
		display: inline-block;
		padding: 0.5em 1.2em;
		background: rgba(5, 150, 105, 0.1);
		color: var(--accent-dark);
		border-radius: 50px;
		font-size: 0.9rem;
		font-weight: 600;
		margin-bottom: 1.5rem;
		border: 1px solid rgba(5, 150, 105, 0.2);
	}

	.hero-title {
		font-size: 4rem;
		margin-bottom: 1rem;
		line-height: 1.1;
		color: rgb(var(--black));
	}

	.hero-subtitle {
		font-size: 1.5rem;
		color: rgb(var(--gray));
		margin-bottom: 2.5rem;
		max-width: 600px;
		margin-left: auto;
		margin-right: auto;
	}

	.hero-actions {
		display: flex;
		gap: 1rem;
		justify-content: center;
		flex-wrap: wrap;
	}

	.btn {
		display: inline-flex;
		align-items: center;
		gap: 0.5rem;
		padding: 1rem 2.5rem;
		border-radius: 14px;
		font-weight: 600;
		font-size: 1.1rem;
		text-decoration: none;
		transition: all 0.3s cubic-bezier(0.2, 0.8, 0.2, 1);
		border: none;
		cursor: pointer;
		position: relative;
		overflow: hidden;
	}

	.btn svg {
		transition: transform 0.3s ease;
	}

	.btn:hover svg {
		transform: translateX(4px);
	}

	.btn-primary {
		background: var(--accent-gradient);
		color: white;
		box-shadow: 0 4px 15px rgba(5, 150, 105, 0.4);
	}

	.btn-primary:hover {
		transform: translateY(-2px);
		box-shadow: 0 8px 25px rgba(5, 150, 105, 0.5);
	}

	.btn-secondary {
		background: rgba(255, 255, 255, 0.8);
		color: rgb(var(--gray-dark));
		border: 1px solid rgba(255, 255, 255, 0.5);
		backdrop-filter: blur(4px);
	}

	.btn-secondary:hover {
		background: white;
		transform: translateY(-2px);
		box-shadow: var(--shadow-md);
	}

	.features {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
		gap: 2rem;
		margin: 6rem 0;
	}

	.feature-card {
		padding: 2.5rem;
		text-align: center;
		height: 100%;
		display: flex;
		flex-direction: column;
		align-items: center;
	}

	.feature-icon-wrapper {
		width: 80px;
		height: 80px;
		background: linear-gradient(135deg, #f0fdfa 0%, #ccfbf1 100%);
		border-radius: 24px;
		display: flex;
		align-items: center;
		justify-content: center;
		margin-bottom: 1.5rem;
		box-shadow: inset 0 0 0 1px rgba(5, 150, 105, 0.1);
		transition: all 0.3s ease;
	}

	.feature-card:hover .feature-icon-wrapper {
		transform: rotate(5deg) scale(1.1);
		background: linear-gradient(135deg, #ccfbf1 0%, #99f6e4 100%);
	}

	.feature-icon {
		font-size: 2.5rem;
	}

	.feature-card h3 {
		margin: 0.5rem 0 1rem;
		font-size: 1.5rem;
	}

	.feature-card p {
		color: rgb(var(--gray));
		margin: 0;
		line-height: 1.6;
	}

	.section-header {
		display: flex;
		justify-content: space-between;
		align-items: flex-end;
		margin-bottom: 2rem;
		padding-bottom: 1rem;
		border-bottom: 1px solid rgba(0,0,0,0.05);
	}

	.section-title {
		margin: 0;
		font-size: 2rem;
	}

	.view-all {
		display: flex;
		align-items: center;
		gap: 0.5rem;
		font-weight: 600;
		font-size: 0.95rem;
		padding: 0.5rem 1rem;
		border-radius: 8px;
		background: rgba(5, 150, 105, 0.05);
		color: var(--accent);
	}

	.view-all:hover {
		background: rgba(5, 150, 105, 0.1);
		transform: translateX(4px);
	}

	.post-grid {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(350px, 1fr));
		gap: 2.5rem;
	}

	.post-card {
		padding: 0; /* é‡ç½® card padding */
		display: flex;
		flex-direction: column;
		overflow: hidden;
		height: 100%;
		border: 1px solid rgba(255, 255, 255, 0.5);
	}

	.post-image {
		width: 100%;
		height: 240px;
		overflow: hidden;
		position: relative;
	}

	.post-image img {
		width: 100%;
		height: 100%;
		object-fit: cover;
		border-radius: 0;
		transition: transform 0.6s cubic-bezier(0.2, 0.8, 0.2, 1);
	}

	.post-image-placeholder {
		width: 100%;
		height: 100%;
		display: flex;
		align-items: center;
		justify-content: center;
		background: linear-gradient(135deg, #f0fdfa 0%, #e0f2fe 100%);
		position: relative;
	}
	
	.post-image-placeholder::after {
		content: '';
		position: absolute;
		top: 0;
		left: 0;
		right: 0;
		bottom: 0;
		background-image: radial-gradient(circle at 2px 2px, rgba(5, 150, 105, 0.1) 1px, transparent 0);
		background-size: 20px 20px;
	}

	.placeholder-icon {
		font-size: 4rem;
		filter: drop-shadow(0 4px 6px rgba(0,0,0,0.1));
		z-index: 1;
	}

	.post-card:hover .post-image img {
		transform: scale(1.08);
	}

	.post-content {
		padding: 2rem;
		flex: 1;
		display: flex;
		flex-direction: column;
	}

	.post-content h3 {
		margin: 0 0 1rem;
		color: rgb(var(--black));
		font-size: 1.5rem;
		line-height: 1.4;
		transition: color 0.2s ease;
	}

	.post-card:hover h3 {
		color: var(--accent);
	}

	.post-content p {
		color: rgb(var(--gray));
		margin: 0 0 1.5rem;
		font-size: 1rem;
		line-height: 1.6;
		flex: 1;
		display: -webkit-box;
		-webkit-line-clamp: 3;
		-webkit-box-orient: vertical;
		overflow: hidden;
	}

	.post-meta {
		display: flex;
		justify-content: space-between;
		align-items: center;
		padding-top: 1.5rem;
		border-top: 1px solid rgba(0,0,0,0.05);
	}

	.post-date {
		color: rgb(var(--gray));
		font-size: 0.9rem;
	}

	.read-more {
		color: var(--accent);
		font-weight: 600;
		font-size: 0.9rem;
		opacity: 0;
		transform: translateX(-10px);
		transition: all 0.3s ease;
	}

	.post-card:hover .read-more {
		opacity: 1;
		transform: translateX(0);
	}

	@media (max-width: 720px) {
		.hero {
			padding: 2em 0;
		}

		.hero-content {
			padding: 2em 1.5em;
		}

		.hero-title {
			font-size: 2.5rem;
		}

		.hero-subtitle {
			font-size: 1.1rem;
		}

		.features {
			grid-template-columns: 1fr;
			gap: 1.5rem;
		}

		.post-grid {
			grid-template-columns: 1fr;
		}
		
		.section-header {
			flex-direction: column;
			align-items: flex-start;
			gap: 1rem;
		}
	}
</style>
